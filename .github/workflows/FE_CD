name: FE Docker Build and Push

on:
  push:
    branches:
      - main

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout repository
      uses: actions/checkout@v2

    - name: Check for FE directory changes
      id: check_fe_changes
      run: |
        if [[ $(git diff --name-only ${{ github.sha }}^ ${{ github.sha }} | grep '^FE/') ]]; then
          echo "::set-output name=fe_changes::true"
        else
          echo "::set-output name=fe_changes::false"
        fi

    - name: Make ENV
      working-directory: ./FE
      run: |
        if [[ "${{ steps.check_fe_changes.outputs.fe_changes }}" == "false" ]]; then
          echo "No changes in FE directory detected. Skipping FE build."
          exit 0
        fi
        touch .env
        echo "${{ secrets.FE_ENV }}" > .env
      shell: bash

    - name: Build Docker image
      working-directory: ./FE
      run: docker build -t ${{ secrets.DOCKER_USERNAME }}/react:latest -f dev.dockerfile .

    - name: Login to Docker Hub
      uses: docker/login-action@v2
      with:
        username: ${{ secrets.DOCKER_USERNAME }}
        password: ${{ secrets.DOCKER_PASSWORD }}

    - name: Push Docker image
      working-directory: ./FE
      run: docker push ${{ secrets.DOCKER_USERNAME }}/react:latest
